.panel.panel-default
  .panel-heading
    %b Users
  %table.table
    %thead
      %tr
        %th Name
        %th Email
        %th Actions
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td
            = link_to [:edit, :admin, user] do
              %span.glyphicon.glyphicon-pencil
            = link_to [:admin, user], method: :delete, data: { confirm: "Are you sure?" } do
              %span.glyphicon.glyphicon-trash